# Backend API Configuration
BE_API_BASE=https://...
DEBUG=false

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
MODEL_NAME=gpt-4o-mini

# Agent Configuration
MAX_ITERATIONS=15
TEMPERATURE=0.7
STREAMING_ENABLED=true

# Server Configuration (Railway/Render will override PORT)
HOST=0.0.0.0
PORT=8000

# Naver API for Place Search (Required for Korea tourism data)
NAVER_CLIENT_ID=your_naver_client_id_here
NAVER_CLIENT_SECRET=your_naver_client_secret_here

# Naver Clova Studio API for RAG (Required for travel knowledge)
NAVER_CLOVA_API_KEY=your_clova_api_key_here
NAVER_CLOVA_APIGW_API_KEY=your_apigw_key_here
NAVER_CLOVA_REQUEST_ID=optional_request_id

# Vector Database Configuration (Pinecone)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=travel-documents

# RAG Configuration
RAG_ENABLED=true
RAG_TOP_K=10
RAG_RERANK_TOP_K=3
RAG_MAX_TOKENS=1024
RAG_TEMPERATURE=0.5

# CORS Configuration (Add your frontend domain)
ALLOWED_ORIGINS=https://your-frontend-domain.com  
